{
  "name": "cloudflare-script",
  "version": "1.0.0",
  "description": "GitHub Action for writing inline-scripts using Cloudflare TypeScript SDK",
  "main": "dist/index.js",
  "scripts": {
    "build": "tsc && ncc build src/index.ts -o dist --source-map --license licenses.txt",
    "package": "ncc build src/index.ts -o dist --source-map --license licenses.txt",
    "test": "jest",
    "lint": "biome check ./src",
    "lint:fix": "biome check --fix ./src",
    "format": "biome format --write ./src",
    "format:fix": "biome format --fix ./src"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/wei/cloudflare-script.git"
  },
  "keywords": [
    "github-action",
    "cloudflare",
    "typescript",
    "sdk"
  ],
  "author": "wei",
  "license": "MIT",
  "dependencies": {
    "@actions/core": "^1.11.1",
    "@actions/exec": "^1.1.1",
    "cloudflare": "^5.1.0"
  },
  "devDependencies": {
    "@biomejs/biome": "^2.2.4",
    "@types/jest": "^30.0.0",
    "@types/node": "^24.3.3",
    "@vercel/ncc": "^0.38.3",
    "jest": "^30.1.3",
    "ts-jest": "^29.4.1",
    "typescript": "^5.9.2"
  },
  "jest": {
    "preset": "ts-jest",
    "testEnvironment": "node",
    "roots": [
      "<rootDir>/src",
      "<rootDir>/__tests__"
    ],
    "testMatch": [
      "**/__tests__/**/*.test.ts"
    ],
    "collectCoverageFrom": [
      "src/**/*.ts",
      "!src/**/*.d.ts"
    ]
  }
}

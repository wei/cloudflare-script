{
  "name": "cloudflare-script",
  "version": "1.0.0",
  "description": "GitHub Action for writing inline-scripts using Cloudflare TypeScript SDK",
  "main": "dist/index.js",
  "scripts": {
    "build": "tsc && ncc build src/index.ts -o dist --source-map --license licenses.txt",
    "package": "ncc build src/index.ts -o dist --source-map --license licenses.txt",
    "test": "jest",
    "lint": "biome check ./src",
    "format": "biome format --write ./src"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/wei/cloudflare-script.git"
  },
  "keywords": [
    "github-action",
    "cloudflare",
    "typescript",
    "sdk"
  ],
  "author": "wei",
  "license": "MIT",
  "dependencies": {
    "@actions/core": "^1.10.1",
    "@actions/exec": "^1.1.1",
    "cloudflare": "^3.0.0"
  },
  "devDependencies": {
    "@biomejs/biome": "^2.2.4",
    "@types/jest": "^29.0.0",
    "@types/node": "^20.0.0",
    "@vercel/ncc": "^0.38.0",
    "jest": "^29.0.0",
    "ts-jest": "^29.0.0",
    "typescript": "^5.0.0"
  },
  "jest": {
    "preset": "ts-jest",
    "testEnvironment": "node",
    "roots": [
      "<rootDir>/src",
      "<rootDir>/__tests__"
    ],
    "testMatch": [
      "**/__tests__/**/*.test.ts"
    ],
    "collectCoverageFrom": [
      "src/**/*.ts",
      "!src/**/*.d.ts"
    ]
  }
}
